{% extends 'base.jinja2' %}
{% from "macros/_formhelpers.jinja2" import render_field %}

{% block page_content %}
<div class="min-h-screen bg-gray-100">
    <div class="flex h-screen justify-center items-center px-4">
        <div class="flex flex-col flex-grow items-center">
            <div class="bg-white shadow p-4 rounded w-full md:w-1/2 lg:w-1/3">
                <h1 class="text-2xl text-center">Register</h1>
                <form action="{{ url_for('users.register') }}" method="POST">
                    {{ form.csrf_token }}

                    {{ render_field(form.name, placeholder="Name") }}
                    {{ render_field(form.email, placeholder="Email address...") }}
                    {{ render_field(form.password, placeholder="Password") }}
                    {{ render_field(form.confirm, placeholder="Re-type your password") }}

                    <button type="submit" class="px-3 py-2 bg-gray-900 text-white uppercase mt-4 rounded text-sm">Sign Up
                    </button>

                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}